@using School.Dto.Master;
@model BaseMasterListForDto
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/Product/Keys.js"></script>
<script src="~/Scripts/Product/Common.js"></script>
<script src="~/Scripts/Product/Attendance.js"></script>
<div class="breadcrumbs-area">
    <h3>Student Attendance</h3>
</div>
<div class="row">
    <!-- Student Attendence Search Area Start Here -->
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <form class="new-added-form">
                    <div class="row">
                        <div class="col-xl-3 col-lg-6 col-12 form-group">
                            <label>Class *</label>
                            <select class="select2 form-control" id="classSelect">
                                <option value="tomatoes">Select Class</option>
                                @foreach (var cls in Model.ClassesMasters)
                                {
                                    <option value="@cls.Id">@cls.ClassName</option>
                                }


                            </select>
                        </div>
                        <div class="col-xl-3 col-lg-6 col-12 form-group">
                            <label>Section *</label>
                            <select class="select2 form-control" id="sectionSelect">
                                <option value="tomatoes">Select Section</option>
                                @foreach (var cls in Model.SectionsMasters)
                                {
                                    <option value="@cls.Id">@cls.SectionName</option>
                                }
                            </select>
                        </div>
                        <div class="col-xl-3 col-lg-6 col-12 form-group">
                            <label>Month *</label>
                            <select class="select2 form-control" id="MonthSelect">
                                <option value="tomatoes">Select Month</option>
                                <option value="1">January</option>
                                <option value="2">February</option>
                                <option value="3">March</option>
                                <option value="4">April</option>
                                <option value="5">May</option>
                                <option value="6">June</option>
                                <option value="7">July</option>
                                <option value="8">August</option>
                                <option value="9">September</option>
                                <option value="10">October</option>
                                <option value="11">November</option>
                                <option value="12">December</option>
                            </select>
                        </div>
                        <div class="col-xl-3 col-lg-6 col-12 form-group">
                            <label>Year *</label>
                            <select class="select2 form-control" id="sessionSelect">
                                <option value="tomatoes">Select Year</option>
                                @foreach (var cls in Model.SessionMasters)
                                {
                                    <option value="@cls.sessionYear">@cls.sessionYear</option>
                                }
                            </select>
                        </div>
                        <div class="col-12 form-group mg-t-8">
                            <span onclick="ViewAttendace()" class="btn-fill-lg btn-gradient-yellow btn-hover-bluedark">Search</span>

                            <button type="reset" class="btn-fill-lg bg-blue-dark btn-hover-yellow">Reset</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Student Attendence Search Area End Here -->
    <!-- Student Attendence Area Start Here -->
    <div id="GridColumn"></div>
</div>