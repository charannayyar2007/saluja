@using System.Data;
@{
    ViewBag.Title = "PeriodicREsult";
    Layout = null;
}
<div class="modal-dialog modal-lgr">
    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">×</button>
        </div>
        <div class="modal-body">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12">
                                <div class="col-lg-2 col-12 form-group" style="float: right;">
                                    <button type="submit" class="fw-btn-fill btn-gradient-yellow">Download PDF</button>
                                </div>
                                <table class="wheat" width="100%" border="0">
                                    <tbody>
                                        <tr>
                                            <td><img src="img/admin.png" alt="logo"></td>
                                            <td>
                                                <h1>SALUJA GOLD INTERNATIONAL SCHOOL</h1>
                                                <h3>NH-114A, Motileda, Giridih (Jharkhand)</h3>
                                                <p>Email- <span style="color: blue;">reachus@salujagoldschool.com</span>, Contact- 6207900130, 6207900131</p>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <h3 class="hesdclr mt-4 mb-0">Academic Session: 2019-20</h3>
                                <h4 class="hesdclr">Periodic Test - 1</h4>
                                <table class="table table1 table-bordered table-striped table-responsive">
                                    <tbody>
                                        <tr> </tr>
                                        <tr> </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-md-12">
                                <div class="table-responsive step-1">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th scope="col" colspan="2" class="themeclr head-bg text-center">Basic Details</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (ViewBag.StudentDetails != null)
                                            {
                                                foreach (DataRow item in ViewBag.StudentDetails.Rows)
                                                {
                                                    <tr>
                                                        <th class="text-left profile">UID.:</th>
                                                        <td class="text-center">@Convert.ToString(item["admissionId"])</td>
                                                    </tr>
                                                    <tr>
                                                        <th class="text-left profile">Roll No:</th>
                                                        <td class="text-center">@Convert.ToString(item["rollNo"])</td>
                                                    </tr>
                                                    <tr>
                                                        <th class="text-left profile">Student's Name:</th>
                                                        <td class="text-center">@Convert.ToString(item["name"])</td>
                                                    </tr>
                                                    <tr>
                                                        <th class="text-left profile">Father's Name:</th>
                                                        <td class="text-center">@Convert.ToString(item["fathername"])</td>
                                                    </tr>
                                                    <tr>
                                                        <th class="text-left profile">Class</th>
                                                        <td class="text-center">@Convert.ToString(item["classId"])</td>
                                                    </tr>
                                                    <tr>
                                                        <th class="text-left profile">Attendance:</th>
                                                        <td class="text-center">@Convert.ToString(item["attendanceId"])</td>
                                                    </tr>
                                                    <tr>
                                                        <th class="text-left profile">Date of Birth:</th>
                                                        <td class="text-center">@Convert.ToDateTime(item["DOB"]).ToString("dd-MMM-yyyy")</td>
                                                    </tr>
                                                }
                                            }
                                                </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-md-12">
                                <div class="table-responsive step-6">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th scope="col" class="themeclr head-bg" style="text-align: center; vertical-align: middle;">Subjects</th>
                                                <th scope="col" class="head-bg" style="text-align: center;">Periodic Test – I (40)</th>
                                                <th scope="col" class="head-bg" style="text-align: center;">Note Book Submission (5)</th>
                                                <th scope="col" class="head-bg" style="text-align: center;">Subject Enrichment (5)</th>
                                                <th scope="col" class="head-bg" style="text-align: center;">Marks Obtained (50) </th>
                                                <th scope="col" class="head-bg" style="text-align: center; vertical-align: middle;">Grade</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (ViewBag.Subject != null)
                                            {
                                                foreach (DataRow item in ViewBag.Subject.Rows)
                                                {
                                                    <tr>
                                                        <th class="profile" scope="column">@Convert.ToString(item["Subject"])</th>
                                                        <td class="text-center">34</td>
                                                        <td class="text-center">5</td>
                                                        <td class="text-center">4</td>
                                                        <td class="text-center">40</td>
                                                        <td class="text-center">A</td>
                                                    </tr>
                                                }
                                            }

                                            @*<tr>
                                                <th class="profile" scope="column">Hindi</th>
                                                <td class="text-center">34</td>
                                                <td class="text-center">5</td>
                                                <td class="text-center">4</td>
                                                <td class="text-center">40</td>
                                                <td class="text-center">A</td>
                                            </tr>*@
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-md-12">
                                <div class="table-responsive">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th scope="col" class="themeclr head-bg" style="text-align: center;">Overall Marks</th>
                                                <th scope="col" class="head-bg" style="text-align: center;">Overall Percentage</th>
                                                <th scope="col" class="head-bg" style="text-align: center;">Overall Grade</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td class="text-center"><span>240</span>/500</td>
                                                <td class="text-center">55 %</td>
                                                <td class="text-center">B2</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-md-12">
                                <div class="table-responsive step-7">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th scope="col" class="themeclr head-bg">Co-Scholastic Areas : [on a 3 point (A-C) grading scale]</th>
                                                <th scope="col" class="head-bg" style="text-align: center; vertical-align: middle;">Grade [P.T -I]</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <th class="profile" scope="column">Art and Craft</th>
                                                <td class="text-center">A1</td>
                                            </tr>
                                            <tr>
                                                <th class="profile" scope="column">Music</th>
                                                <td class="text-center">A2</td>
                                            </tr>
                                            <tr>
                                                <th class="profile" scope="column">Health and Physical Education</th>
                                                <td class="text-center">C1</td>
                                            </tr>
                                            <tr>
                                                <th class="profile" scope="column">Discipline</th>
                                                <td class="text-center">A2</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-md-12">
                                <div class="table-responsive step-8">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th scope="col" class="themeclr head-bg" style="text-align: center;">(%) RANGE</th>
                                                <th scope="col" class="head-bg" style="text-align: center; vertical-align: middle;">GRADE</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <th class="profile text-center" scope="column">91-100</th>
                                                <td class="text-center">A1</td>
                                            </tr>
                                            <tr>
                                                <th class="profile text-center" scope="column">81-90</th>
                                                <td class="text-center">A2</td>
                                            </tr>
                                            <tr>
                                                <th class="profile text-center" scope="column">71-80</th>
                                                <td class="text-center">B1</td>
                                            </tr>
                                            <tr>
                                                <th class="profile text-center" scope="column">61-70</th>
                                                <td class="text-center">B2</td>
                                            </tr>
                                            <tr>
                                                <th class="profile text-center" scope="column">51-60</th>
                                                <td class="text-center">C1</td>
                                            </tr>
                                            <tr>
                                                <th class="profile text-center" scope="column">41-50</th>
                                                <td class="text-center">C2</td>
                                            </tr>
                                            <tr>
                                                <th class="profile text-center" scope="column">33-40</th>
                                                <td class="text-center">D</td>
                                            </tr>
                                            <tr>
                                                <th class="profile text-center" scope="column">32 &amp; Below</th>
                                                <td class="text-center">E (Needs improvement)</td>
                                            </tr>
                                            <tr>
                                                <td colspan="2">*Grades are awarded on a 8-point grading scale.</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-md-12">
                                <div class="table-responsive step-3">
                                    <table class="table table-bordered">
                                        <tbody>
                                            <tr>
                                                <th style="width:33%;">Place:</th>
                                                <td> Signature of Class Teacher:</td>
                                                <td> Signature of Principal:</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

